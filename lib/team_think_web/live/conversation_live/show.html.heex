<ResourceShow.show 
  resource_name="project"
  resource={@project}
>
  <:heading><%= @project.name %> Conversation</:heading>
  <:description><p class="text-center text-2xl font-thin">A place to permanently record information related to the overall project concerns.</p></:description>

<div class="px-4 py-3 md:col-span-3 min-h-[16rem] flex flex-col justify-between rounded-lg border">
  <div class="pb-2">
    <ul class="space-y-2">
      <%= for message <- @messages do %>
        <li class="block">
          <.talk_bubble user={@user} message={message} />
        </li>
      <% end %>
    </ul>
  </div>
  <.live_component 
    module={MessageLive.FormComponent} 
    id="message-form" 
    conversation={@conversation}
    user={@user}
    topic={@topic}
  />
</div>
</ResourceShow.show>

